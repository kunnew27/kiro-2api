# Kiro-2API Configuration
# Copy this file to .env and fill in your values

# ==================================================================================================
# Proxy Server Settings
# ==================================================================================================

# API key for authenticating requests (required)
PROXY_API_KEY=your_secure_api_key_here

# Server port (default: 8000)
PORT=8000

# ==================================================================================================
# Kiro API Credentials
# ==================================================================================================

# Refresh token for obtaining access token (optional if using multi-tenant mode)
REFRESH_TOKEN=

# AWS CodeWhisperer Profile ARN
PROFILE_ARN=

# AWS Region (default: us-east-1)
KIRO_REGION=us-east-1

# Path to JSON credentials file (alternative to REFRESH_TOKEN)
# Can be a local path or URL
KIRO_CREDS_FILE=

# ==================================================================================================
# Retry Configuration
# ==================================================================================================

# Maximum retry attempts (default: 3)
MAX_RETRIES=3

# Base retry delay in seconds (default: 1.0)
BASE_RETRY_DELAY=1.0

# ==================================================================================================
# Timeout Settings
# ==================================================================================================

# First token timeout in seconds (default: 120)
FIRST_TOKEN_TIMEOUT=120

# First token max retries (default: 3)
FIRST_TOKEN_MAX_RETRIES=3

# Stream read timeout in seconds (default: 300)
STREAM_READ_TIMEOUT=300

# Non-stream request timeout in seconds (default: 900)
NON_STREAM_TIMEOUT=900

# ==================================================================================================
# Logging & Debug
# ==================================================================================================

# Log level: TRACE, DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Debug mode: off, errors, all (default: off)
DEBUG_MODE=off

# Debug log directory
DEBUG_DIR=debug_logs

# ==================================================================================================
# Model Cache
# ==================================================================================================

# Model cache TTL in seconds (default: 3600)
MODEL_CACHE_TTL=3600

# ==================================================================================================
# Rate Limiting
# ==================================================================================================

# Rate limit per minute (0 = disabled)
RATE_LIMIT_PER_MINUTE=0

# ==================================================================================================
# Slow Model Configuration
# ==================================================================================================

# Timeout multiplier for slow models like Opus (default: 3.0)
SLOW_MODEL_TIMEOUT_MULTIPLIER=3.0

# ==================================================================================================
# Tool Description Processing
# ==================================================================================================

# Max length for tool description before moving to system prompt (default: 10000)
TOOL_DESCRIPTION_MAX_LENGTH=10000
